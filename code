#include <iostream>

using namespace std;

int n;

int main()
{
    long long n, a, b;
    
    cin >> n;
    
    a = n * n;
    
    b = (n + 1) * (n + 1);
    
    if(a % 2 == 0)
    {
        a = a / 2;
    }
    
    if(a % 2 == 0)
    {
        a = a / 2;
    }
    
    if(b % 2 == 0)
    {
        b = b / 2;
    }
    
    if(b % 2 == 0)
    {
        b = b / 2;
    }
    
    cout << a * b;
    
    return 0;
}
